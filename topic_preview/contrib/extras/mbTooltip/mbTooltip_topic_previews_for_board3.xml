			<edit>
				<find><![CDATA[		$("dt[title]").mbTooltip({ opacity:.9, wait:600, hasArrow:false, hasShadow:true, live:false });]]></find>
				<action type="replace-with"><![CDATA[		<!-- IF $S_IN_PORTAL -->
		$("a[title]").mbTooltip({ opacity:.9, wait:600, hasArrow:false, hasShadow:true, live:false });
