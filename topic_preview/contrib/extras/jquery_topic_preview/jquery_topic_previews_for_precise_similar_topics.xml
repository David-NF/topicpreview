<mod xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://www.phpbb.com/mods/xml/modx-1.2.6.xsd">
	<header>
		<meta name="generator" content="MODX file generated with PP MODX Creator by tumba25 (online version)"/>
		<license><![CDATA[http://opensource.org/licenses/gpl-license.php GNU General Public License v2]]></license>
		<title lang="en"><![CDATA[Topic Preview - jQuery Style Topic Previews Add-On for Precise Similar Topics]]></title>
		<description lang="en"><![CDATA[Uses jQuery to create a nicer looking Topic Preview. These instructions add this feature to Precise Similar Topics installations.]]></description>
		<author-notes lang="en"><![CDATA[Use of these instructions requires that you have already installed:
-Precise Similar Topics 1.2.0 (or later, not included with this MOD)
-Topic Preview (1.1.0 or later)
-Topic Preview for Precise Similar Topics add-on
-jQuery Style Topic Previews Add-On]]></author-notes>
		<author-group>
			<author>
				<realname><![CDATA[Matt Friedman]]></realname>
				<username><![CDATA[VSE]]></username>
				<homepage><![CDATA[http://www.phpbb.com/customise/db/mod/topic_preview/]]></homepage>
			</author>
		</author-group>
		<mod-version>1.1.0</mod-version>
		<installation>
			<level>easy</level>
			<time>300</time>
			<target-version>3.0.11</target-version>
		</installation>
		<link-group>
			<link type="dependency" href="http://www.phpbb.com/customise/db/mod/precise_similar_topics_ii/" lang="en">Precise Similar Topics v1.2.0 (or later, not included with this MOD)</link>
			<link type="dependency" href="../../../install_mod.xml" lang="en">Topic Preview (1.1.0 or later)</link>
			<link type="dependency" href="../integration_precise_similar_topics.xml" lang="en">Topic Preview for Precise Similar Topics</link>
			<link type="dependency" href="jquery_topic_preview_install.xml" lang="en">jQuery Style Topic Previews Add-On</link>
		</link-group>
	</header>
	<action-group>
		<open src="includes/functions_similar_topics.php">
			<edit>
				<find><![CDATA[			'L_SIMILAR_TOPICS'	=> $user->lang['PST_TITLE_ACP'],]]></find>
				<action type="before-add"><![CDATA[			'S_SHOW_TOPICS'		=> true,]]></action>
			</edit>
		</open>
		<open src="styles/prosilver/template/similar_topics.html">
			<edit>
				<find><![CDATA[<dt <!-- IF similar.TOPIC_ICON_IMG -->style="background-image: url({T_ICONS_PATH}{similar.TOPIC_ICON_IMG}); background-repeat: no-repeat;"<!-- ENDIF --><!-- IF similar.TOPIC_PREVIEW_TEXT --> title="{similar.TOPIC_PREVIEW_TEXT}"<!-- ENDIF -->>]]></find>
				<inline-edit>
					<inline-find><![CDATA[title="{similar.TOPIC_PREVIEW_TEXT}"]]></inline-find>
					<inline-action type="after-add"><![CDATA[ id="t{similar.TOPIC_ID}"]]></inline-action>
				</inline-edit>
			</edit>
			<edit>
				<find><![CDATA[<!-- IF not S_IS_BOT --><a href="{similar.U_LAST_POST}">{LAST_POST_IMG}</a> <!-- ENDIF --><br />{similar.LAST_POST_TIME}<br /> </span>
				</dd>
			</dl>]]></find>
				<action type="after-add"><![CDATA[			<!-- IF similar.TOPIC_PREVIEW_TEXT -->
			<div id="topic_preview_t{similar.TOPIC_ID}" style="display:none;">
				<div class="topic_preview_caption">{L_TOPIC_PREVIEW}</div>
				<!-- IF similar.TOPIC_PREVIEW_AVATAR --><div class="topic_preview_avatar_first">{similar.TOPIC_PREVIEW_AVATAR}</div><!-- ENDIF -->
				<div class="topic_preview_text_first"><!-- IF similar.TOPIC_PREVIEW_TEXT2 --><strong>{L_FIRST_POST}:</strong><br /><!-- ENDIF --><span></span></div>
				<div class="topic_preview_break"></div>
				<!-- IF similar.TOPIC_PREVIEW_TEXT2 -->
					<!-- IF similar.TOPIC_PREVIEW_AVATAR2 --><div class="topic_preview_avatar_last">{similar.TOPIC_PREVIEW_AVATAR2}</div><!-- ENDIF -->
					<div class="topic_preview_text_last"><strong>{L_LAST_POST}:</strong><br /><span>{similar.TOPIC_PREVIEW_TEXT2}</span></div>
				<!-- ENDIF -->
			</div>
			<!-- ENDIF -->]]></action>
			</edit>
		</open>
		<open src="styles/subsilver2/template/similar_topics.html">
			<edit>
				<find><![CDATA[<a href="{similar.U_VIEW_TOPIC}" <!-- IF similar.TOPIC_PREVIEW_TEXT -->title="{similar.TOPIC_PREVIEW_TEXT}"<!-- ENDIF --> class="topictitle">{similar.TOPIC_TITLE}</a>]]></find>
				<inline-edit>
					<inline-find><![CDATA[title="{similar.TOPIC_PREVIEW_TEXT}"]]></inline-find>
					<inline-action type="after-add"><![CDATA[ id="t{similar.TOPIC_ID}"]]></inline-action>
				</inline-edit>
			</edit>
			<edit>
				<find><![CDATA[<p class="gensmall">{L_IN} <a href="{similar.U_VIEW_FORUM}">{similar.FORUM_TITLE}</a></p>]]></find>
				<action type="after-add"><![CDATA[				<!-- IF similar.TOPIC_PREVIEW_TEXT -->
				<div id="topic_preview_t{similar.TOPIC_ID}" style="display:none;">
					<div class="topic_preview_caption">{L_TOPIC_PREVIEW}</div>
					<!-- IF similar.TOPIC_PREVIEW_AVATAR --><div class="topic_preview_avatar_first">{similar.TOPIC_PREVIEW_AVATAR}</div><!-- ENDIF -->
					<div class="topic_preview_text_first"><!-- IF similar.TOPIC_PREVIEW_TEXT2 --><strong>{L_FIRST_POST}:</strong><br /><!-- ENDIF --><span></span></div>
					<div class="topic_preview_break"></div>
					<!-- IF similar.TOPIC_PREVIEW_TEXT2 -->
						<!-- IF similar.TOPIC_PREVIEW_AVATAR2 --><div class="topic_preview_avatar_last">{similar.TOPIC_PREVIEW_AVATAR2}</div><!-- ENDIF -->
						<div class="topic_preview_text_last"><strong>{L_LAST_POST}:</strong><br /><span>{similar.TOPIC_PREVIEW_TEXT2}</span></div>
					<!-- ENDIF -->
				</div>
			<!-- ENDIF -->]]></action>
			</edit>
		</open>
		<diy-instructions lang="en"><![CDATA[Purge the Cache.]]></diy-instructions>
	</action-group>
</mod>
