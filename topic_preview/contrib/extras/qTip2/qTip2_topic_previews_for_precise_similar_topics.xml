	<action-group>
		<open src="includes/functions_similar_topics.php">
			<edit>
				<find><![CDATA[				t.topic_id, t.topic_title, t.topic_time, t.topic_views, t.topic_replies, t.topic_poster, t.topic_first_poster_name, t.topic_first_poster_colour, ]]></find>
				<action type="replace-with"><![CDATA[				t.topic_id, t.topic_title, t.topic_time, t.topic_views, t.topic_replies, t.topic_poster, t.topic_first_poster_name, t.topic_first_poster_colour, t.topic_first_post_id, t.topic_last_post_id,]]></action>
			</edit>
			<edit>
				<find><![CDATA[			$sql_array['LEFT_JOIN'][] = array('FROM' => array(POSTS_TABLE => 'pt'), 'ON' => 'pt.post_id = t.topic_first_post_id');
			$sql_array['SELECT'] .= ', pt.post_text AS first_post_preview_text';]]></find>
				<action type="after-add"><![CDATA[			$sql_array['LEFT_JOIN'][] = array('FROM' => array(POSTS_TABLE => 'ptl'), 'ON' => 'ptl.post_id = t.topic_last_post_id');
			$sql_array['SELECT'] .= ', ptl.post_text AS last_post_preview_text';]]></action>
			</edit>
			<edit>
				<find><![CDATA[					$first_post_preview_text = trim_topic_preview($similar['first_post_preview_text'], $config['topic_preview_limit']);]]></find>
				<action type="after-add"><![CDATA[					if ($similar['topic_first_post_id'] != $similar['topic_last_post_id'])
					{
						$last_post_preview_text = trim_topic_preview($similar['last_post_preview_text'], $config['topic_preview_limit']);
					}
					else if (isset($last_post_preview_text))
					{
						unset($last_post_preview_text); //Clear any last post text that may be left over from previous topic
					}]]></action>
			</edit>
			<edit>
				<find><![CDATA[					'TOPIC_PREVIEW_TEXT'	=> (isset($first_post_preview_text)) ? censor_text($first_post_preview_text) : '',]]></find>
				<action type="after-add"><![CDATA[					'TOPIC_PREVIEW_TEXT2'	=> (isset($last_post_preview_text)) ? censor_text($last_post_preview_text) : '',]]></action>
			</edit>
